{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,  // Añadir esta línea
    "outDir": "./dist"  // Opcional: para especificar la carpeta de salida
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
